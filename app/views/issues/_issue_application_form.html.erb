<div class="card portfolio-issue-card" style = "padding-left:30%; padding-right:30%">
  <div class="portfolio-issue-card-header card-bg-image-center grid-y">
    <div class="card-section">
      <%= form_tag (application_path) , :id => 'application_form' , :method => 'POST',  :remote => true, :class => 'form-horizontal' do %>
      <h4> Application is for</h4>
      <div class="form-group">
        <div class="grid-x grid-margin-x">
          <div class="cell shrink grid-x align-middle">
            <%= label_tag :me, nil, class: 'cell auto ' %>
            <%= check_box_tag :current_user, current_account.id, true, :class => 'form-check-input' %>
              <%= label_tag :current_user do %>
            <% end %>
          </div>
        </div>
      </div>
      <h6>(OR untick to select from your roles)</h6>
      <div class="form-group">
        <label> My Roles </label>
        <%= select_tag 'account_id', options_from_collection_for_select(current_account.related_accounts, 'id', 'name'), {:style => 'width:50%', :disabled => 'true'} %> 
        <%= hidden_field_tag :issue_id, @issue.id %> 
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= submit_tag 'Apply', class: 'button hollow  black' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>